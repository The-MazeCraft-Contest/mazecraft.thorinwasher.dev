---
import { SITE } from 'src/config';

const { intro } = Astro.props;
---

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
  integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script>
  import '../scripts/jquery.scrollex';
  import '../scripts/jquery.scrolly';
  import '../scripts/utils';
  import '../scripts/main';
</script>

{
  intro && (
    <>
      <div id="intro">
        <h1>
          Traverse
          <br />
          the maze!
        </h1>
        <p>
          An infinitely generating maze world that regenerates weekly.<br/>
		  How far can your bot get from spawn? 0 blocks is the current <a href="../leaderboards">record</a>!
        </p>
        <ul class="actions">
          <li>
            <a href="#header" class="button icon solid solo fa-arrow-down scrolly">
              Continue
            </a>
          </li>
        </ul>
      </div>
    </>
  )
}

<!-- Header -->
<header id="header">
  <a href="/" class="logo">{SITE.title}</a>
</header>
